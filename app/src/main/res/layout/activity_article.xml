<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleActivity" >

    <com.manuelpeinado.fadingactionbar.view.ObservableScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/article_scrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <ImageView
                android:id="@+id/header"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Article Title"
                android:id="@+id/article_title"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:paddingLeft="11dp"
                android:paddingTop="11dp"
                android:paddingRight="11dp"
                android:paddingBottom="2dp"
                android:layout_below="@+id/header" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Article Content"
                android:id="@+id/article_content"
                android:padding="11dp"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/article_publish_date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Author"
                android:id="@+id/article_author"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingBottom="2dp"
                android:layout_below="@+id/article_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Publish Date"
                android:id="@+id/article_publish_date"
                android:layout_below="@+id/article_author"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="11dp"
                android:paddingRight="11dp" />

        </RelativeLayout>

    </com.manuelpeinado.fadingactionbar.view.ObservableScrollView>

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_shadow"
        android:layout_below="@+id/toolbar"
        android:id="@+id/view"
        android:visibility="gone" />

</RelativeLayout>